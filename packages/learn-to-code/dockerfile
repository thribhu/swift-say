FROM node:20 as learn-to-code-instance
WORKDIR /usr/loc/src/app/client
COPY package.json ./
RUN yarn install

FROM learn-to-code-instance as build-loc-client
COPY . .
RUN yarn build
RUN tar -czvf loc-client.tar.gz -C ./build .

# Nginx should run on port 9000, same as the React app
FROM nginx:latest as nginx-milana-client
RUN rm /etc/nginx/conf.d/default.conf
RUN rm -rf /usr/share/nginx/html/*
COPY nginx.conf /etc/nginx/nginx.conf
COPY --from=build-loc-client /usr/loc/src/app/client/milana-client.tar.gz /usr/share/nginx/html/
WORKDIR /usr/share/nginx/html/
RUN tar -xzvf milana-client.tar.gz
EXPOSE 9000

CMD ["nginx", "-g", "daemon off;"]